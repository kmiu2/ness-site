{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./www/",
    "target": "es5"
  },
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "prettier": true,
    "jsx-boolean-value": false,
    "only-arrow-functions": true
  },
  "rulesDirectory": ["tslint-plugin-prettier"]
}
